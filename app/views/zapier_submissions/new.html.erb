<h1><%= @zapier_form.name %></h1>
<%= @zapier_form.zapierapi %>

<%= simple_form_for @zapier_submission do |f| %>
  <%= f.hidden_field :zapier_form_id, value:@zapier_form.id %>
  <% @zapier_form.form_fields.each do |form_field| %>
    <%= f.fields_for :form_values, FormValue.new(form_field_id: form_field.id) do |v| %>
      <%= v.hidden_field :form_field_id, value: form_field.id %>
      <%= v.label :value, form_field.label %>
      <%= v.text_field :value %>
    <% end %>
    <br />
  <% end %>
  <%= f.submit %>
<% end %>